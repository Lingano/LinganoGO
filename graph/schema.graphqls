type User {
    id: ID!
    name: String!
    email: String!
}

type Reading {
    id: ID!
    title: String!
    user: User!
    finished: Boolean!
}

type Query {
    user(id: ID!): User
    users: [User!]!
    readings: [Reading!]!
}

input NewReading {
    title: String!
    userID: ID!
}

input NewUser {
    name: String!
    email: String!
    password: String!
}

type Mutation {
    createUser(input: NewUser!): User!
    createReading(input: NewReading!): Reading!
}
